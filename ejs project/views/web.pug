doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Users Management
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    link(href="stylesheet.css", rel="stylesheet")

  body
    form(action="/submit", method="POST", id="add")
      h1 Add User
      .mb-3
        label(for="formGroupExampleInput", class="form-label") First Name
        input(type="text", class="form-control", id="formGroupExampleInput", placeholder="Your First Name", name="fname")
      .mb-3
        label(for="formGroupExampleInput2", class="form-label") Last Name
        input(type="text", class="form-control", id="formGroupExampleInput2", placeholder="Your Last Name", name="lname")
      input(type="submit", value="Submit", id="button")
      
    if typeof(alertMessage) !== 'undefined' && alertMessage !== null
      script.
        alert("#{alertMessage}")

    form(action="/delete", method="POST", id="delete")
      h1 Delete User
      .mb-3
        label(for="formGroupExampleInput", class="form-label") User's ID
        input(type="text", class="form-control", id="formGroupExampleInput", placeholder="The Id of the user you would like to delete", name="id")
      input(type="submit", value="Delete", id="button")

    if typeof(alertMessage) !== 'undefined' && alertMessage !== null
      script.
        alert("#{alertMessage}")
    
    form(action="/displayUsers", method="GET")
      button(type="submit" id="display") Display Users
